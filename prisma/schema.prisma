generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Card {
  id           String   @id @default(uuid()) @map("_id")
  title        String
  type         String
  answer       String
  times        Int
  evaluation   String
  showDataTime DateTime
  Deck         Deck?    @relation(fields: [deckId], references: [id])
  deckId       String?
}

model Deck {
  id    String @id @default(uuid()) @map("_id")
  photo String
  title String
  cards Card[]
}

model Midia {
  id       String @id @default(uuid()) @map("_id")
  path     String @unique
  type     String
  ownerId  String
  gridFsId String @unique
}
